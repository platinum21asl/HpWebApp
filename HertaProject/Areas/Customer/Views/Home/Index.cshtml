@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pt-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title h5 text-warning text-center">by <b>@product.Author</b></p>
                            </div>
                            <div class="pt-1">
                                <p class="text-dark text-opacity-75 text-center">List Price: <span class="text-decoration-line-through">@product.ListPrice</span></p>
                            </div>
                            <div class="pt-1">
                                <p class="text-dark text-opacity-75 text-center">As low as: <span>@product.Price100</span></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-controller="Home" asp-route-productId="@product.Id" class="btn btn-primary bg-gradiaent border-0 form-control">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>